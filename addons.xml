<?xml version="1.0" encoding="UTF-8"?>
<addons>

    <addon id="plugin.program.zzzbuilds" name="zZz Builds" version="1.1" provider-name="zZz">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests" optional="true" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="addon.py">
            <provides>executable</provides>
        </extension>
        <extension point="xbmc.service" library="service.py" />
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">zZz Builds is a lightweight addon for installing builds and maintenance on Kodi.</summary>
            <description lang="en_GB">Kodi Wizard</description>
            <disclaimer lang="en_GB">This Addon contains no content</disclaimer>
            <language>en</language>
            <platform>all</platform>
            <license>GPL-2.0-or-later</license>
            <news>  1.0 - Second Release.
                    1.1 - Minor Fixes.
            </news>
            <assets>
                    <icon>icon.png</icon>
                    <fanart>fanart.jpg</fanart>
                    <banner></banner>
                    <clearlogo></clearlogo>
                    <screenshot></screenshot>
            </assets>
        </extension>
    </addon>

    <addon id="repository.zzzbuilds" name="zZz Builds Repository" version="1.0" provider-name="zZz">
        <extension point="xbmc.addon.repository" name="zZz Builds Repository">
            <dir minversion="20.0">
                <info compressed="false">https://zzzbuilds.com/kodi/files/addons.xml</info>
                <checksum>https://zzzbuilds.com/kodi/files/addons.xml.md5</checksum>
                <datadir zip="true">https://zzzbuilds.com/kodi/files/</datadir>
            </dir>
        </extension>
    
        <extension point="xbmc.addon.metadata">
            <summary lang="en">zZz Builds Repository</summary>
            <description lang="en">The official home of zZz Builds.</description>
            <disclaimer lang="en_GB">This Addon contains no content</disclaimer>
            <language>en</language>
            <platform>all</platform>
            <license>GPL-2.0-or-later</license>
            <news>1.0 - Initial Release.</news>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>

</addons>